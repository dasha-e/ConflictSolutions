#include <iostream>
int main() {
    int n, i;
    std::cout << "Enter the dimension of the array: ";
    std::cin >> n;
    int *a = new int[n];
    std::cout << "Enter the array\n";
    for (i = 0; i < n; i++) {
        std::cout << "a[" << i + 1 << "]: ";
        std::cin >> a[i];
    }
    int d, count, j;
    d=n/2;
    while (d>0)
    {
       for (i=0; i<n-d; i++)
       {
         j=i;
         while (j>=0 && a[j]>a[j+d])
         {
             count=a[j];
             a[j]=a[j+d];
             a[j+d]=count;
             j--;
         }
       }
    d/=2;
    }
    for (i = 0; i < n; i++) {
        std::cout << a[i] << " ";
    }
    std::cout << std::endl;
    return 0;
}
